{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2023"],
    "outDir": "dist",
    "rootDirs": ["curation-migration-backfill", "curation-authors-backfill", "curation-migration-datasync"],
    "removeComments": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["curation-migration-backfill/**/*.ts", "curation-authors-backfill/**/*.ts","curation-migration-datasync/**/*.ts"]
}
